# Database Configuration - Use one of the following options:

# Option 1: PostgreSQL Connection String (Recommended)
# Get from: https://neon.tech (free tier)
DATABASE_URL=postgresql://user:password@host.neon.tech:5432/dbname

# Option 2: Individual Database Variables (Legacy)
DB_HOST=your_database_host
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=growguardians
DB_PORT=5432

# Security
SECRET_KEY=your_super_secret_key_here_change_this

# Model Path
MODEL_PATH=./best_resnet50.pth

# Upload Folder
UPLOAD_FOLDER=uploads

# Flask Configuration
FLASK_DEBUG=False

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number
ENABLE_SMS=False